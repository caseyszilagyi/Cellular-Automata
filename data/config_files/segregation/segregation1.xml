<?xml version="1.0" encoding="UTF-8" ?>
<simulation type="segregation">
  <title>Segregation</title>
  <author>Thomas Schelling</author>
  <desc>Segregation simulation that is inspired by the Schelling model of segregation</desc>

  <cellPackage>segregation</cellPackage>
  <gridType>Grid</gridType>
  <stepperType>SegregationStepper</stepperType>

  <rows>4</rows>
  <columns>4</columns>
  <grid>
    x x o x
    o x x o
    x o o x
    x x o o
  </grid>

  <cellPackage>segregation</cellPackage>
  <gridType>Grid</gridType>
  <stepperType>SimulationStepper</stepperType>

  <codes>
    <key X='AgentCell'></key>
    <key O='AgentCell'></key>
  </codes>

  <colors>
    <key X = 'FF0000'></key>
    <key O = '00FF00'></key>
  </colors>

  <parameters>
    <parameter satisfactionprop='0.5'/>
  </parameters>


</simulation>