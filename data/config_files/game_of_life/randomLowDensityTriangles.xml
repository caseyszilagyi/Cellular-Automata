<?xml version="1.0" encoding="UTF-8" ?>
<simulation type="game_of_life">
  <title>Game of Life</title>
  <author>John Horton Conway</author>
  <desc>The Game of Life Simulation</desc>

  <coreSpecifications>
    <type cellPackage ="game_of_life"></type>
    <type gridType = "Grid"></type>
    <type stepperType = "SimulationStepper"></type>
    <type structureType = "Triangle"></type>
  </coreSpecifications>

  <gridInfo>
    <rows>50</rows>
    <columns>50</columns>

    <grid>
      <type>Grid</type>
      <gridState>
        Random
      </gridState>

      <randomProbs>
        <key x='0.8'></key>
        <key o='0.2'></key>
      </randomProbs>

      <codes>
        <key x='DeadCell'></key>
        <key o='AliveCell'></key>
      </codes>

      <decoder>
        <key AliveCell = '1'></key>
        <key DeadCell = '2'></key>
      </decoder>

      <parameters>
      </parameters>

    </grid>
  </gridInfo>

</simulation>