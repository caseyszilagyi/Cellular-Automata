<?xml version="1.0" encoding="UTF-8" ?>
<simulation type="game_of_life">
  <title>Game of Life</title>
  <author>John Horton Conway</author>
  <desc>The Game of Life Simulation</desc>

  <coreSpecifications>
    <type cellPackage ="game_of_life"></type>
    <type gridType = "Grid"></type>
    <type stepperType = "SimulationStepper"></type>
    <type structureType = "Square"></type>
  </coreSpecifications>

  <gridInfo>
    <rows>10</rows>
    <columns>10</columns>

    <grid>
      <type>Grid</type>
      <gridState>
        d d d d d d d d d d
        d a a d d d d a a d
        d a a d d d a d d a
        d d d d d d d a a d
        d d d d d d d d d d
        d a a d d d d d d d
        a d d a d d a a d d
        d a d a d d a d a d
        d d a d d d d a d d
        d d d d d d d d d d
      </gridState>

      <codes>
        <key a='DeadCell'></key>
        <key d='AliveCell'></key>
      </codes>

      <decoder>
        <key AliveCell = '1'></key>
        <key DeadCell = '2'></key>
      </decoder>

      <parameters>
      </parameters>
    </grid>
  </gridInfo>

  <colors>
    <key x= 'FFFFFF'></key>
    <key O= '000000'></key>
  </colors>

</simulation>